{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "allowBranch": "master",
      "bump": "patch",
      "conventionalCommits": true
    }
  },
  "ignoreChanges": ["ignored-file", "**/__tests__/**", "**/*.md"]
}
