{
  "version": "0.2.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "allowBranch": "master",
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "changelogPreset": "angular"
    }
  },
  "ignoreChanges": ["ignored-file", "**/__tests__/**", "**/*.md"]
}
